<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <div class=".col-md-8" class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </.col-md->
    <div class=".col-md-8" class="content"><%= feed_item.content %></div>
    <div class=".col-md-8" class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    <% if current_user?(feed_item.user) %>
      <%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.content %>
    <% end %>
    </div>
</li>