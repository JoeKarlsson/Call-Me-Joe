<% provide(:title, 'Sign up') %>

<div id="signup">
	<div class="container centered" style="padding-top:10%; padding-bottom:10%;">
	  <h1>Sign up</h1>
	  <div class="row">
	    <div class=".col-md-6 offset3">
		  <%= form_for(@user) do |f| %>
		    <%= render 'shared/error_messages', object: f.object %>
		    <%= render 'fields', f: f %>
		    <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
		  <% end %>
		</div>
	  </div>
	</div>
</div>