<div class="container">
	<h1>Editing post</h1>

	<%= render 'form' %>
	                  
	<%= link_to 'Show', @post %> |
	<%= link_to 'Back', posts_path %>

	<script type="text/javascript">$(document).ready(function() {
    	if ($('textarea').length > 0) {
        	var data = $('textarea');
        	$.each(data, function(i) {
            	CKEDITOR.replace(data[i].id);
        	});
    	}
	});</script>
</div> <!--Container-->